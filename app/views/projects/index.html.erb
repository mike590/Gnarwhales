<div class="letters">
  <% @letters.each do |letter| %>
    <a class="jumper" href="#<%= letter %>"><%= letter %></a>
  <% end %>
</div>

<ul class="users">
<% @projects.keys.sort.each do |starting_letter| %>
  <% @projects[starting_letter].each do |project| %>
    <p class="project-idx">
      <%= image_tag project.image.url %>
      <span id="proj-link"><%= link_to project.title, project %></span>
    </p>
  <% end %>
<% end %>
</ul>

